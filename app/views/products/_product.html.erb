<tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.stock %></td>
    <td><%= product.key_code %></td>
    <td><%= product.price %></td>
    <td>
        <%= link_to 'Show', product_path(product) %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
</tr>
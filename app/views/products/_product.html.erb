<tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.stock %></td>
    <td><%= product.key_code %></td>
    <td><%= product.price %></td>
    <td><%= product.available %></td>
    <td>
        <%= link_to 'Show', product_path(product) %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product_path(product), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, remote: true %>
    </td>
</tr>